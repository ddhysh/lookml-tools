{

    "git": {
        "url": "https://github.com/WW-Digital/core-analytics-looker.git",
        "folder": "gitrepo"
    },

    "infile_globs": [
        "gitrepo/*.lkml"
    ],

    "rules": {
        "file_level_rules" : [
            {"name": "DataSourceRule", "run": false},
            {"name": "OneViewPerFileRule", "run": false},
            {"name": "FilenameViewnameMatchRule", "run": false}
        ],
        "field_level_rules": [
            {"name": "DescriptionRule", "run": false},
            {"name": "DrillDownRule", "run": false},
            {"name": "YesNoNameRule", "run": false},
            {"name": "CountNameRule", "run": false},
            {"name": "AllCapsRule", "run": false},
            {"name": "LexiconRule", "run": false, "phrases": ["Subscriber",  "Subscription", "studio"]}
        ],
        "other_rules": [
            {"name": "NoOrphansRule", "run": true}
        ]
    },

    "output": {
        "csv": {
            "file_output": "linter_file_report.csv",
            "field_output": "linter_field_report.csv"
        }
    }
}
